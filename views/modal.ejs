<div class="row">
  <div class="col-md-2 col-md-offset-5">


    <div class="container-fluid gedf-wrapper">
      <button data-toggle="modal" data-target="#formulaire" class="btn btn-default btn-sm">Compléter votre profil avant de continuer</button>
      <div class="modal fade" id="formulaire">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title">Vos infos :</h4>
              <button type="button" class="close" data-dismiss="modal">
                <span>&times;</span>
              </button>
            </div>
            <div class="modal-body row">


              <form class="col" enctype="multipart/form-data" method="post" action="/updateProfile">
                <div class="form-group">
                  <label for="photo" class="form-control-label">Photo de profil</label>
                  <input type="file" name="photo">
                </div>
                <div class="form-group">
                  <label for="pseudo" class="form-control-label">Pseudonyme</label><br>
                  <input type="text" class="form-control" name="pseudo" id="pseudo" placeholder="Votre pseudonyme">
                </div>
                <div class="form-group">
                  <label for="description" class="form-control-label">Biographie</label>
                  <input type="text" class="form-control" name="description" id="description" placeholder="Vous, en quelques mots">
                </div>
                <input type="submit" value="Mettre à jour" class="btn col-md-12">
              </form>


            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.0/umd/popper.min.js"></script>
<script src="js/bootstrap.min.js"></script>
