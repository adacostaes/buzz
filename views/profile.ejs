<html>

<head>
  <title>Buzzz</title>
  <link rel="icon" href="/medias/favicon.ico" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/solid.css">
  <script src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
  <link rel="stylesheet" type="text/css" href="/css/profile.css">
</head>

<body>
  <% if (messages.error) { %>
  <%= messages.error %>
  <% } %>
  <nav class="navbar navbar-light bg-white">
    <a href="/home" class="navbar-brand"> <img id="logo" src="/medias/logo_header.png" alt="Logo"> <span id="logo-text"> BUZZZ </span></a>
    <a href="/logout"><button type="button" class="btn btn-default btn-sm">
        <span class="fas fa-sign-out-alt"></span> Se déconnecter
      </button>
    </a>
    <%- include ("./messages") %>
    <form class="form-inline">
      <div class="input-group">
        <input type="text" class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2">
        <div class="input-group-append">
          <button class="btn btn-outline-warning" type="button" id="button-addon2">
            <i class="fa fa-search"></i>
          </button>
        </div>
      </div>
    </form>
  </nav>
  <% if(req.session.passport.user == user.id) {%>
    <script>
      $(document).ready(function(){
        $( "#click" ).click(function() {
            $("#features").hide("slow", "swing");
            $("#edit").show("slow","swing");
          })

          $( "#click2" ).click(function(){
            $("#features").show("slow", "swing");
            $("#edit").hide("slow","swing");
          })
        })

    </script>

  <div class="container">
    <div class="page-header">
      <h1>Mon profil </h1>
      <br><br>
    </div>
    <!--END page-header-->
    <div class="row" id="features">
      <div class="col-sm-4 feature">
        <img style="width:300px;height:300px;border-radius:50%;" src="<%= user.profilePictureURL %>" alt="Web Design" class="img-circle">
      </div>
      <!--END feature-->

      <div class="col-sm-8 feature">
        <div class="row">
          <div class="centered-text col-sm-offset-3 col-sm-6 col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6">
            <div itemscope="" itemtype="http://schema.org/Person">
              <h2> <span itemprop="name"><%= user.firstName + ' ' + user.lastName%></span></h2>
              <button id="click" type="submit" class="btn btn-sm btn-danger" name="loginButton" style="margin-bottom: 15px">Modifier mon profil</button>
              
              <p><i class="fa fa-user" aria-hidden="true"></i><span> @<%= user.alias%></span></p>
              <p><i class="fa fa-map-marker"></i> <span itemprop="addressRegion"><%= user.city + ', ' + user.country%></span></p>
              <p> <i class="fa fa-calendar"> </i> Membre depuis le <strong>
                <%
                  var myDate = parseInt(user.createdOn, 10);
                  var date = new Date(myDate);
                  var fdate =  ("0" + date.getDate()).slice(-2) + '/' + ("0" + (date.getMonth() + 1)).slice(-2) + '/' + date.getFullYear()
                 %>
                 <%= fdate %>
               </strong> </p>
               <p> <i class="fa fa-birthday-cake"> </i> Né(e) le <strong>
                  <%= user.birthdate %>
                </strong> </p>
            </div>
          </div>
        </div>

        </div>
        <div class="col-sm-4 feature">
          <br>
          <h3>Biographie: </h3>
          <br>
          <%= user.description %>
        </div>
      </div>
      <!--END feature-->
    </div>
  </div>
<div class="container">
    <div class="row" id="edit" style="display: none">
      <div class="col-sm-4 feature">
        
      </div>
      <!--END feature-->

      <div class="col-sm-8 feature">
        <div class="row">
          <div class="centered-text col-sm-offset-3 col-sm-6 col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6">
            <div itemscope="" itemtype="http://schema.org/Person">
              <!--FORM -->
              <form name="updateProfileForm" role="form" enctype="multipart/form-data" method="post" action="/updateProfile">
                <div class="form-group">
                  <img style="width:300px;height:300px;border-radius:50%;" src="<%= user.profilePictureURL %>" alt="Web Design" class="img-circle">
                  <input type="file" name="photo">
                </div>
              <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                  <div class="form-group">
                    <%= user.firstName %>
                  </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6">
                  <div class="form-group">
                    <%= user.lastName %>
                  </div>
                </div>
              </div>
  
              <div class="form-group">
                <%= user.email %>
              </div>
  
              <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                  <div class="form-group">
                    <input type="password" name="password" id="updatePassword" class="form-control input-sm" placeholder="Mot de passe">
                  </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6">
                  <div class="form-group">
                    <input type="password" name="confirmPwd" id="updatePasswordConfirmation" class="form-control input-sm" placeholder="Confirmation" onblur="validation()">
                  </div>
                </div>
              </div>
  
              <div class="form-row">
                <div class="form-group col-md-6">
                  <select name="updateCountry" id="country" class="form-control">
                    <option value="" disabled>Pays</option>
                    <option value="France" selected>France</option>
                  </select>
                </div>
                <div class="form-group col-md-6">
                  <input type="text" class="form-control" placeholder="Ville" name="updateCity" style="text-transform: capitalize;">
                </div>

                <div class="form-group">
                  <label for="updateDescription">Biographie</label>
                  <textarea name="updateDescription" id="" cols="35" rows="2"></textarea>
                </div>

  
                <input type="submit" value="Mettre à jour mon profil" class="btn col-md-12">
  
            </form>
            <!-- FIN FORM-->

            </div>
          </div>
        </div>
        </div>
      </div>
      <!--END feature-->
    </div>
  </div>
  </div>
  <% } else { %>
    <div class="container">
    <div class="page-header">
      <h1>Vous êtes sur le profil de: </h1>
      <br><br>
    </div>
    <!--END page-header-->
    <div class="row" id="features">
      <div class="col-sm-4 feature">
        <img style="width:300px;height:300px;border-radius:50%;" src="<%= user.profilePictureURL %>" alt="Web Design" class="img-circle">
      </div>
      <!--END feature-->

      <div class="col-sm-8 feature">
        <div class="row">
          <div class="centered-text col-sm-offset-3 col-sm-6 col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6">
            <div itemscope="" itemtype="http://schema.org/Person">
              <h2> <span itemprop="name"><%= user.firstName + ' ' + user.lastName%></span></h2> <br>
              <p><i class="fa fa-user" aria-hidden="true"></i><span> @<%= user.alias%></span></p>
              <p><i class="fa fa-map-marker"></i> <span itemprop="addressRegion"><%= user.city + ', ' + user.country%></span></p>
              <p> <i class="fa fa-calendar"> </i> Membre depuis le <strong>
                <%
                  var myDate = parseInt(user.createdOn, 10);
                  var date = new Date(myDate);
                  var fdate =  ("0" + date.getDate()).slice(-2) + '/' + ("0" + (date.getMonth() + 1)).slice(-2) + '/' + date.getFullYear()
                 %>
                 <%= fdate %>
               </strong> </p>
               <p> <i class="fa fa-birthday-cake"> </i> Né(e) le <strong>
                  <%= user.birthdate %>
                </strong> </p>
            </div>
          </div>
          <div class="col-lg-12 centered-text">
            <h5>Biographie: </h5>
            <%= user.description %>
          </div>
        </div>

        <div class="panel-footer">
          <div class="row">
            <div id="social-links" class=" col-lg-12">
              <div class="row">
                <div class="col-xs-6 col-sm-3 col-md-2 col-lg-3 social-btn-holder">
                  <a title="Suivre" class="btn btn-social btn-block btn-github" target="_BLANK" href="http://github.com/yourid">
                    <i class="fas fa-user-plus"></i> Suivre
                  </a>
                </div>
                <div class="col-xs-6 col-sm-3 col-md-2 col-lg-3 social-btn-holder">
                  <a title="Démarrer une discussion instantanée" class="btn btn-social btn-block btn-stackoverflow" target="_BLANK" href="http://stackoverflow.com/users/youruserid/yourid">
                    <i class="far fa-comments"></i> Démarrer une discussion instantanée
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!--END feature-->
    </div>
    <!--end features-->
  </div>
  <%}%>
  <!--end container-->
</body>
</html>
