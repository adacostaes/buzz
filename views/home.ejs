<html>

<head>
  <title>Buzzz</title>
  <link rel="icon" href="medias/favicon.ico" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/solid.css">
  <script src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
  <link rel="stylesheet" type="text/css" href="../public/css/home.css">
</head>

<body>

  <script>
  </script>

  <span id='latitude'></span>
  <span id='longitude'></span>
  <script src="scripts/meteo.js"></script>
  <% if (messages.error) { %>
  <%= messages.error %>
  <% } %>
  <nav class="navbar navbar-light bg-white">
    <a href="/home" class="navbar-brand"> <img id="logo" src="medias/logo_header.png" alt="Logo"> <span id="logo-text">
        BUZZZ </span></a>
    <a href="/logout"><button type="button" class="btn btn-default btn-sm">
        <span class="fas fa-sign-out-alt"></span> Se déconnecter
      </button>
    </a>
    <%- include ("./messages") %>
    <% if(isCompleted == true) {%>
    <div>
      <form class="form-inline my-0 my-lg-0">
        <div class="input-group">
          <input aria-label="search" onkeyup="" name="search" id="search" class="form-control" placeholder="Rechercher"
            aria-label="Recipient's username" aria-describedby="button-addon2">
          <button class="btn btn-outline-warning" type="button" id="button-addon2">
            <i class="fa fa-search"></i>
          </button>
        </div>
      </form>
    </div>
    <% } %>
  </nav>

  <% if(isCompleted == true) {%>
  <div class="container-fluid gedf-wrapper">
    <div class="row">
      <div class="col-md-3">
        <div class="card">
          <div class="card-body">
            <div class="h5">
              <img class="rounded-circle" width="60" src="<%= profilePictureURL %>" alt="">
              @<a href="/profile/<%= id%>"><%= alias%></a>
            </div>

            <div class="h7 text-muted">
              <% if(gender == "Femme") {%>
              <span style='color: Hotpink' class="fas fa-venus"></span>
              <% } else { %>
              <span style="color: Dodgerblue" class="fas fa-venus"></span>
              <% } %>
              <%= firstname%>
              <%=lastname %>
            </div>
            <div class="h7">
              <%= description%>
            </div>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <div class="h6 text-muted">Date de naissance</div>
              <div class="h5"><%= birthdate%></div>
            </li>
            <li class="list-group-item">
              <div class="h6 text-muted">Mes Amis</div>
              <ul>
                <% var friendship;%>
                <% for (var i = 0; i < friendships.length ; i++) { %>
                <% friendship = friendships[i] %>
                <li> <a href="/profile/<%= friendship.friend.id%>"><%= friendship.friend.firstName%> <%= friendship.friend.lastName%></a>
                  <a title="Ne plus êtes ami"
                    href="/removeFriend/<%= friendship.friend.id%>">
                    <i class="fas fa-user-times"></i>
                  </a>
                </li>
                <% } %>
              </ul>
            </li>
            <li class="list-group-item"><%=city%>, <%=country%></li>
          </ul>
          <ul class="list-group list-group-flush">

            <div id="weather">
              <li class="list-group-item">
                <button id="location-button" type="submit" class="btn btn-warning">Voir la météo</button>
              </li>
            </div>
          </ul>
        </div>
      </div>
      <div class="col-md-6 gedf-main">

        <!--- \\\\\\\Post-->
        <div class="card gedf-card">
          <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
              <li class="nav-item">
                <a class="nav-link active" id="posts-tab" data-toggle="tab" href="#posts" role="tab"
                  aria-controls="posts" aria-selected="true">Ecrire
                  une publication</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="images-tab" data-toggle="tab" role="tab" aria-controls="images"
                  aria-selected="false" href="#images">Images</a>
              </li>
            </ul>
          </div>
          <div class="card-body">

            <form role="form" method="post" action="/home">
              <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="posts" role="tabpanel" aria-labelledby="posts-tab">
                  <div class="form-group">
                    <label class="sr-only" for="message">Votre message</label>
                    <textarea class="form-control" name="post" id="message" rows="3"
                      placeholder="Que voulez vous publier ?"></textarea>
                  </div>

                </div>
                <div class="tab-pane fade" id="images" role="tabpanel" aria-labelledby="images-tab">
                  <div class="form-group">
                    <div class="custom-file">
                      <input type="file" class="custom-file-input" id="customFile">
                      <label class="custom-file-label" for="customFile">Parcourir</label>
                    </div>
                  </div>
                  <div class="py-4"></div>
                </div>
              </div>
              <div class="btn-toolbar justify-content-between">
                <div class="btn-group">
                  <input type="submit" class="btn btn-warning" value="Publier">
                </div>
              </div>
              <form />
          </div>
        </div>
        <!-- Post /////-->

        <!--- \\\\\\\Post-->
        <div class="card gedf-card">
          <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
              <div class="d-flex justify-content-between align-items-center">
                <div class="mr-2">
                  <img class="rounded-circle" width="45" src="https://picsum.photos/50/50" alt="">
                </div>
                <div class="ml-2">
                  <div class="h5 m-0">@Yazid</div>
                  <div class="h7 text-muted">Miracles Lee Cross</div>
                </div>
              </div>
              <div>
                <div class="dropdown">
                  <button class="btn btn-link dropdown-toggle" type="button" id="gedf-drop1" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    <i class="fa fa-ellipsis-h"></i>
                  </button>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="gedf-drop1">
                    <div class="h6 dropdown-header">Configuration</div>
                    <a class="dropdown-item" href="#">Delete</a>
                    <a class="dropdown-item" href="#">Hide</a>
                  </div>
                </div>
              </div>
            </div>

          </div>
          <div class="card-body">
            <div class="text-muted h7 mb-2"> <i class="fa fa-clock-o"></i>10 min ago</div>

            <p class="card-text">
              Lorem ipsum dolor sit amet consectetur adipisicing elit. Quo recusandae nulla rem eos ipsa praesentium
              esse magnam nemo dolor
              sequi fuga quia quaerat cum, obcaecati hic, molestias minima iste voluptates.
            </p>
          </div>
        </div>
        <!-- Post /////-->



      </div>
      <div class="col-md-3">
        <div class="card gedf-card">
          <div class="card-body">
            <h5 class="card-title">Messagerie</h5>
            <div class="card-subtitle mb-2 text-muted" is="messsagerie">Vous n'avez pas de message.</div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%} else {%>
  <%- include("modal.ejs") %>
  <% } %>









</body>

</html>